peso = float(input("Peso: (kg) "))
altura = float(input("Altura: (m) "))

imc = peso/(altura**2)

print(f"IMC: {imc:.1f}")

if imc<18.5:
  print("abaixo do peso")

elif imc<=25:
  print("Peso ideal")

elif imc<=30:
  print("Sobrepeso")

elif imc<=40:
  print("Obesidade")

elif imc>40:
  print("Obesidade mÃ³rbida")
