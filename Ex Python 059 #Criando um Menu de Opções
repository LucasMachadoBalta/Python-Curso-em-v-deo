n1 = float(input("n1: "))
n2 = float(input("n2: "))
print("---"*5)

while True:
  x = int(input("[1]somar\n[2]multiplicar\n[3]maior\n[4]novos números\n[5]sair\nOpção: "))
  print("---"*5)
  if x==1:
    print(f"{n1} + {n2} = {n1+n2}")

  if x==2:
    print(f"{n1} * {n2} = {n1*n2}")

  if x==3:
    if n1>n2:
      print(f"{n1} > {n2}")
    else:
      print(f"{n1} < {n2}")

  if x==4:
    print("novos números")
    n1 = float(input("n1: "))
    n2 = float(input("n2: "))

  if x==5:
    break
